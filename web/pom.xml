            <directory>src/main/javascript</directory>
            <filtering>false</filtering>
            <includes>
              <include>nothing</include>
            </includes>
            <excludes>
              <exclude>**/*</exclude>
            </excludes>
          </resource>
        </resources>
        <plugins>
